        <decimalTextBox refId="WFPQuota_Size" defaultValue="50">Размер кэша (в МБ)</decimalTextBox>
      </presentation>
      <presentation id="WFPScan">
        <dropdownList refId="WFPScanList" defaultItem="0">Частота сканирования:</dropdownList>
      </presentation>
    </presentationTable>
