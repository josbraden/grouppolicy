      </presentation>
      <presentation id="WdiDpsScenarioExecutionPolicy">
        <dropdownList refId="WdiDpsScenarioExecutionPolicyLevel" noSort="true">Úroveň spuštění scénáře</dropdownList>
      </presentation>
    </presentationTable>
