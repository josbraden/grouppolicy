        <decimalTextBox refId="WFPQuota_Size" defaultValue="50">Cachegröße (in MB)</decimalTextBox>
      </presentation>
      <presentation id="WFPScan">
        <dropdownList refId="WFPScanList" defaultItem="0">Überprüfungsfrequenz:</dropdownList>
      </presentation>
    </presentationTable>
